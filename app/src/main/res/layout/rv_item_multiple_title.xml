<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_margin_12dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_padding_20dp"
        android:paddingTop="@dimen/activity_padding_8dp"
        android:paddingRight="@dimen/activity_padding_20dp"
        android:paddingBottom="@dimen/activity_padding_8dp">

    <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_padding_20dp"
            android:maxLines="1"
            android:layout_weight="1"
            android:paddingLeft="@dimen/activity_padding_12dp"
            android:paddingTop="@dimen/activity_padding_8dp"
            android:paddingRight="@dimen/activity_padding_12dp"
            android:paddingBottom="@dimen/activity_padding_8dp"
            android:textSize="20sp"
            android:textStyle="bold" />

    <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:foreground="?attr/selectableItemBackground"
            android:paddingLeft="@dimen/activity_padding_12dp"
            android:paddingTop="@dimen/activity_padding_8dp"
            android:paddingRight="@dimen/activity_padding_12dp"
            android:paddingBottom="@dimen/activity_padding_8dp"
            android:text="@string/item_text_more" />

</LinearLayout>